<?xml version="1.0"?>

<tasks>

	<task name="XSLT" 
		class="com.japisoft.xflows.task.xslt.XSLTRunner" 
		ui="com.japisoft.xflows.task.xslt.XSLTUI" 
		help="XSL Transformation with version 1.0 or 2.0"
		system="true"/>

	<task name="XQUERY" 
		class="com.japisoft.xflows.task.xquery.XQueryRunner" 
		ui="com.japisoft.xflows.task.xquery.XQueryUI" 
		help="XQuery output"
		system="true"/>

	<task name="COPY" 
		class="com.japisoft.xflows.task.copy.CopyRunner" 
		ui="com.japisoft.xflows.task.copy.CopyUI" 
		help="Copy a set of files to a directory"
		system="true"/>
	
	<task name="FOP" 
		class="com.japisoft.xflows.task.fop.FOPRunner" 
		ui="com.japisoft.xflows.task.fop.FOPUI" 
		help="XSL-FO transformation to PDF..."
		system="true"/>
	
	<task name="DOCBOOK" 
		class="com.japisoft.xflows.task.docbook.DocBookRunner" 
		ui="com.japisoft.xflows.task.docbook.DocBookUI" 
		help="DocBook transformation to PDF..."
		system="true"/>
	
	<task name="DELETE" 
		class="com.japisoft.xflows.task.delete.DeleteRunner" 
		ui="com.japisoft.xflows.task.delete.DeleteUI" 
		help="Delete a set of files"
		system="true"/>

	<task name="FORMAT" 
		class="com.japisoft.xflows.task.format.FormatRunner" 
		ui="com.japisoft.xflows.task.format.FormatUI" 
		help="Format XML documents"
		system="true"/>
	
	<task name="CSV" 
		class="com.japisoft.xflows.task.imp.cvs.CSVRunner" 
		ui="com.japisoft.xflows.task.imp.cvs.CSVUI" 
		help="Convert CSV data files to XML document"
		system="true"/>
		
	<task name="CONCAT" 
		class="com.japisoft.xflows.task.concat.ConcatRunner" 
		ui="com.japisoft.xflows.task.concat.ConcatUI" 
		help="Concat various XML files to a final one"
		system="true"/>
	
	<task name="PARSING" 
		class="com.japisoft.xflows.task.parsing.ParsingRunner" 
		ui="com.japisoft.xflows.task.parsing.ParsingUI" 
		help="Parse and validate XML documents"
		system="true"/>

</tasks>
